<h1>Uploads</h1>

<%= link_to 'New Upload', new_upload_path, class: 'btn btn-primary m-y-1' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Es index</th>
      <th>File</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.id %></td>
        <td><%= upload.es_index %></td>
        <% path = File.join('/uploads', upload.id.to_s, upload.file) %>
        <td><%= link_to path, path %></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @uploads %>
