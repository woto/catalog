<%= container do %>
  <%= row do %>
    <div class="col-xl-2"></div>
    <div class="col-xs-24 col-sm-24 col-md-24 col-lg-24 col-xl-20">

      <h2 class="m-b-2">
        Корзина
      </h2>
      <div class="table-responsive">
        <table class="table table-striped js-cart-products">
          <thead class="thead-inverse">
            <tr>
              <th>
                Товар
              </th>
              <th>
                Цена
              </th>
              <th>
                Количество
              </th>
              <th style="min-width: 130px">
                Сумма
              </th>
            </tr>
          </thead>
          <tbody>
            <% @products.each_with_index do |product, index| %>
              <tr class="js-cart-products__row" data-id="<%= product.id %>">
                <td>
                  <%= product.es_body['title'] %>
                </td>

                <td class="text-nowrap">
                  <%= number_to_currency product.es_body['price'], precision: 0 %>
                </td>

                <td>
                  <div class="form-group" style="width: 140px;">

                    <div class="input-group input-group-sm">
                      <span class="input-group-btn">
                        <button class="btn btn-secondary js-cart-products__calc" data-operator="-" type="button">-</button>
                      </span>
                      <%= text_field_tag "", session['cart_product_hashes'][product.id.to_s], class: "form-control js-cart-products__input-count", readonly: "readonly" %>
                      <span class="input-group-addon"><small><%= product.es_body['unit'] %></small></span>
                      <span class="input-group-btn">
                        <button class="btn btn-secondary js-cart-products__calc" data-operator="+" type="button">+</button>
                      </span>
                    </div>

                  </div>
                </td>

                <td class="text-nowrap">
                  <span class="js-cart-products__sum">
                    <%= number_to_currency product.es_body['price'] * session['cart_product_hashes'][product.id.to_s], precision: 0 %>
                  </span>
                </td>

              </tr>
            <% end %>
          </tbody>
          <tfoot class="table-warning">
            <tr>
              <th colspan="5">
                <div class="pull-right">
                  Итого: 
                  <span id="js-cart-products__total"><%= number_to_currency farm_total_cost_of_products_in_cart, precision: 0 %></span>
                </div>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>

      <%= container class: "m-t-3" do %>

        <form>
          <div class="form-group row">
            <label for="name" class="col-xs-24 col-sm-7 col-md-6 col-lg-5 col-xl-4 col-form-label"><strong>Контактное лицо</strong></label>
            <div class="col-xs-24 col-sm-16 col-md-14 col-lg-12 col-xl-10">
              <input class="form-control" type="text" placeholder="Представьтесь пожалуйста">
            </div>
          </div>
          <div class="form-group row">
            <label for="phone" class="col-xs-24 col-sm-7 col-md-6 col-lg-5 col-xl-4 col-form-label"><strong>Телефон</strong></label>
            <div class="col-xs-24 col-sm-16 col-md-14 col-lg-12 col-xl-10">
              <input type="phone" class="form-control" type="tel" placeholder="Укажите контактный номер телефона">
            </div>
          </div>
          <div class="form-group row">
            <label for="address" class="col-xs-24 col-sm-7 col-md-6 col-lg-5 col-xl-4 col-form-label"><strong>Адрес доставки</strong></label>
            <div class="col-xs-24 col-sm-16 col-md-14 col-lg-12 col-xl-10">
              <textarea class="form-control" rows="5" placeholder="С условиями доставки вы можете ознакомиться на странице Информация"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-24 col-sm-7 col-md-6 col-lg-5 col-xl-4 col-form-label"></div>
            <div class="col-xs-24 col-sm-16 col-md-14 col-lg-12 col-xl-10">
              <input type="submit" class="btn btn-success pull-xs-right" value="Оформить заказ">
            </div>
          </div>
        </form>

      <% end %>
    </div>
  <% end %>
<% end %>
